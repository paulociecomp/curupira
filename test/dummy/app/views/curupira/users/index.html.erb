<h1>Users</h1>

<div class="actions">
  <%= link_to "New", new_user_path %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Username</th>
      <th>Active</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= link_to user.email, user %></td>
        <td><%= link_to user.username, user %></td>
        <td><%= user.active %></td>
        <td><%= link_to :edit, edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
