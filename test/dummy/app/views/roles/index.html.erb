<div>
  <h2>List Roles</h2>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td><%= link_to "Edit", edit_role_path(role) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>