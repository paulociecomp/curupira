<h1>Cadastrar Nova Caracteristica</h1>

<%= form_for @feature do |f| %>
  <div class="field">
  	<%= f.label :description, "Descrição" %><br>  
  	<%= f.text_field :description %>	
  </div>
  <div class="field">
  	<%= f.label :controller, "Controller" %><br>  
  	<%= f.text_field :controller %>	
  </div>
  <div class="field">
    <%= f.label :action, "Action" %><br>  
    <%= f.text_field :action %> 
  </div>
  <div class="field">
	<%= f.label :request_method, "Método" %><br> 
  	<%= f.text_field :request_method %>	
  </div>
  <div class="features">
	<%= f.submit %> or <%= link_to :cancel, features_path %>
  </div>
<%end%>