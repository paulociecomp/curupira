<h1>Caracteristicas</h1>

<div class="actions">
  <%= link_to "Novo", new_feature_path %>
</div>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Path</th>
      <th>Método</th>
      <th>Ativo</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @features.each do |feature| %>
      <tr>
        <td><%= feature.description %></td>
        <td><%= feature.path_info %></td>
        <td><%= feature.request_method %></td>
        <td><%= feature.active %></td>
        <td><%= link_to "Editar", edit_feature_path(feature) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
